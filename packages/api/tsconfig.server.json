{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "strictNullChecks": true,
    "noEmit": false
  },
  "ts-node": {
    "esm": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"]
}
